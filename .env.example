# ------------------------------------------------------------
# Pavement Performance Suite – Environment Template
# Copy to .env (never commit real secrets) and fill values per environment.
# ------------------------------------------------------------

# === Application Identity ===
VITE_APP_NAME="Pavement Performance Suite"
VITE_APP_ENV="development"          # development|staging|production
VITE_APP_REGION="us-east-1"         # Deployment region hint for logging/metrics

# === Firebase (Legacy compatibility – optional) ===
VITE_FIREBASE_API_KEY=""
VITE_FIREBASE_AUTH_DOMAIN=""
VITE_FIREBASE_PROJECT_ID=""
VITE_FIREBASE_STORAGE_BUCKET=""
VITE_FIREBASE_MESSAGING_SENDER_ID=""
VITE_FIREBASE_APP_ID=""

# === Supabase (Primary backend) ===
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="public-anon-key"
SUPABASE_SERVICE_ROLE_KEY="service-role-key"          # Server-side ONLY (scripts)
SUPABASE_DB_PASSWORD="super-secure-password"          # Server-side ONLY (scripts)
SUPABASE_URL="https://your-project.supabase.co"       # Optional: used by seed scripts
SUPER_ADMIN_EMAIL="n8ter8@gmail.com"

# === Feature Flags ===
VITE_FEATURE_PARTNER="true"            # Client collaboration module
VITE_FEATURE_TONIGHT="true"           # Work window planner
VITE_FEATURE_ANALYTICS="true"
VITE_FEATURE_NOTIFICATIONS="true"
VITE_FEATURE_AI_ASSIST="false"        # Toggle upcoming AI insights

# === Observability & Analytics ===
VITE_LOGGING="true"
VITE_ANALYTICS="false"
VITE_TELEMETRY_ENDPOINT=""
VITE_SENTRY_DSN=""
VITE_POSTHOG_KEY=""
VITE_SEGMENT_WRITE_KEY=""

# === Integrations ===
VITE_MAPBOX_TOKEN=""                   # GIS overlays
VITE_WEATHER_API_KEY=""               # NOAA / OpenWeather
VITE_QUICKBOOKS_CLIENT_ID=""
VITE_QUICKBOOKS_REDIRECT_URI="https://app.example.com/oauth/callback"

# === Build & Tooling ===
NODE_ENV="development"
PNPM_HOME="$HOME/.pnpm"

# === Security Notes ===
# - Never commit real secrets.
# - Service role keys belong in secure secret managers (Vault/Doppler/AWS SM).
# - Provide environment-specific overrides via `.env.development.local`, etc.

